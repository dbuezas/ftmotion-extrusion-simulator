{
  "name": "s_curve_simulator",
  "version": "1.0.0",
  "description": "S-curve motion profile simulator",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && mkdir -p docs && cp index.html styles.css docs/ && cp -r dist docs/",
    "watch": "tsc --watch",
    "start": "http-server . -p 3000",
    "dev": "tsc --watch & http-server . -p 3000",
    "format": "eslint src/**/*.ts --fix && prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "motion",
    "profile",
    "trapezoidal",
    "simulator"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "http-server": "^14.1.1",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  }
}
